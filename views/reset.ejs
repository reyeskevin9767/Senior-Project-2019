<!--==========================================Include Header==========================================================-->
<% include ./partials/header %>

<!--==========================================Title of Edit Form======================================================-->
<div class="container text-center text-white p-2 my-3">  
  <i class="fas fa-crown fa-2x mb-4 text-center"></i>
  <h3 class="text-center">Reset Password</h3>
</div>

<!--==========================================Reset Form================================================================-->
<div class="container col-md-6 shadow-sm mt-3 mb-4 allformColor pageAnimate rounded">

<form action="/reset/<%= token %>" method="POST">
  <div class="container text-white py-3">
    
<!--==========================================Input Password================================================================-->
    <div class="form-row">
      <div class="form-group text-white col-md-6">
        <label for="inputnewpassword"><i class="fas fa-key mr-2"></i>New Password (8 or More)</label>
        <input type="password" class="form-control" id="inputnewpassword" name="password"
        pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" placeholder="New Password" autofocus="autofocus">
    </div>
    
<!--==========================================New Password================================================================-->
      <div class="form-group text-white col-md-6">
        <label for="inputconfirmpassword"><i class="fas fa-key mr-2"></i>Confirm Password</label>
        <input type="password" class="form-control" id="inputconfirmpassword" name="confirm" value="" placeholder="Confirm Password">
    </div>
  
  </div>

<!--==========================================Submit================================================================-->
  <button type="submit" class="btn text-white removeLink"><i class="fas fa-sign-in-alt mr-2"></i>Update Password</button>

  </div>

</form>

  </div>

<!-- Includes The Header ejs -->
<% include ./partials/footer %>

