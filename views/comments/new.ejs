<!--==========================================Include Header==========================================================-->
<% include ../partials/header %>

<!--==========================================Title of New Form======================================================-->
<div class="container text-center text-white p-2 my-3">  
  <i class="fas fa-crown fa-2x mb-4 text-center"></i>
  <h3 class="text-center">New Comment</h3>
</div>

<!--==========================================New Form======================================================-->
<div class="container col-md-6 shadow-sm mt-3 mb-4 allformColor pageAnimate rounded">

  <form action="/items/<%=item._id %>/comments" method="POST">
    <div class="container text-white py-3">
      <div class="form-row">

        <div class="form-group text-white col-md-12">
          <label for="addcomment"><i class="fas fa-pencil-alt mr-2"></i>Comment</label>
          <textarea class="form-control" type="text" id="addcomment" name="comment[text]" placeholder="Write A New Comment..." rows="5"></textarea>
        </div>

      </div>

<!--==========================================Comment Button======================================================-->
      <button type="submit" class="btn text-white removeLink"><i class="fas fa-pencil-alt mr-2"></i>New Comment</button>

    </div> 
  </form>
</div>

<!--==========================================Include Footer======================================================-->
<% include ../partials/footer %>