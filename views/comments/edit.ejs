<!--==========================================Include Header==========================================================-->
<% include ../partials/header %>

<!--==========================================Title of Edit Form======================================================-->
<div class="container text-center text-white p-2 my-3">  
  <i class="fas fa-crown fa-2x mb-4 text-center"></i>
  <h3 class="text-center">Edit Comment</h3>
</div>

<!--==========================================New Form======================================================-->
<div class="container col-md-6 shadow-sm mt-3 mb-4 allformColor pageAnimate rounded">

  <form action="/items/<%=item_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
    <div class="container text-white py-3">
      <div class="form-row">

        <div class="form-group col-md-12">
          <label for="editcomment"><i class="fas fa-edit mr-2"></i>Comment</label>
          <textarea class="form-control" type="text" id="editcomment" name="comment[text]" rows="5" placeholder="Update Your Comment..." ></textarea>
        </div>

      </div>

<!--==========================================Edit Button======================================================-->
      <button type="submit" class="btn text-white removeLink"><i class="fas fa-edit mr-2"></i>Edit Comment</button>

    </div> 

  </form>

</div>

<!--==========================================Include Footer======================================================-->
<% include ../partials/footer %>