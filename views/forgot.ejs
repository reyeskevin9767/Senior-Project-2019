<% include ./partials/header %>

<!--==========================================Title of Forgot Form======================================================-->
<div class="container text-center text-white p-2 my-3">  
  <i class="fas fa-crown fa-2x mb-4 text-center"></i>
  <h3 class="text-center">Forgot Password</h3>
</div>

<!--==========================================Forgot Form===============================================================-->
<div class="container col-md-6 shadow-sm mt-3 mb-4 allformColor pageAnimate rounded">

  <form action="/forgot" method="POST"> 
  
    <div class="container text-white py-3">
      <div class="form-row">
      
<!--==========================================Forgot Password===============================================================-->

        <div class="form-group text-white col-md-6">
          
          <label for="forgotemail"><i class="fas fa-envelope mr-2"></i>Email</label>
          <input type="email" class="form-control" id="forgotemail" name="email" autofocus>
          
        </div>
    
    </div>
    
 <!--==========================================Submit Button===============================================================-->
    <button type="submit" class="btn text-white removeLink"><i class="fas fa-sign-out-alt mr-2"></i>Reset Password</button>
    
  </div> 

  </form>

</div>

