</head>

<!----------------------------------------------- Nav Section ------------------------------------------------->
<body>
  
  <nav id="navcolor" class="navbar navbar-expand-lg navbar-dark">
    
    <a class="navbar-brand" href="/"><i class="fas fa-crown mr-2"></i>KC</a>
    
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" 
    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
    </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      
      <li class="nav-item active">
        <a class="nav-link" href="/"><i class="fab fa-fort-awesome mr-2"></i>Home<span class="sr-only">(current)</span></a>
      </li>
      
      <li class="nav-item">
        <a class="nav-link" href="/items"><i class="fas fa-store-alt mr-2"></i>Browse</a>
      </li>
      
      <li class="nav-item">
        <a class="nav-link" href="aboutus"><i class="fas fa-users mr-2"></i>About Us</a>
      </li>
      
      <li class="nav-item">
        <a class="nav-link" href="/safety"><i class="fas fa-satellite mr-2"></i>Safety</a>
      </li>
      
      <li class="nav-item dropdown">
        
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <i class="fas fa-chevron-circle-down mr-2"></i>Extra
        </a>
        
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
          <a class="dropdown-item" href="/updates">Updates</a>
          <a class="dropdown-item" href="/seniorproject">Senior Project</a>
          <a class="dropdown-item" href="/faq">FAQ</a>
          <a class="dropdown-item" href="/termsofuse">Terms of Use</a>
          <a class="dropdown-item" href="/privacy">Privacy Policy</a>
        </div>
      </li>
    </ul>
    
<!----------------------------------------------- Online Status ----------------------------------------------->
    <ul class="nav navbar-nav ml-auto">
      <% if(!currentUser){%>
      
      <li class="nav-item">
        <a class="nav-link" href="/signup"><i class="fas fa-arrow-alt-circle-up mr-2"></i>Sign Up</a>
      </li>
      
      <li class="nav-item">
        <a class="nav-link" href="/login"><i class="fas fa-arrow-alt-circle-right mr-2"></i>Login</a>
      </li>
      
      <% } else { %>
      
      <li class="nav-item dropdown">
        
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <i class="fas fa-chevron-circle-down mr-2"></i>Notifications <span class="badge"><%= notifications.length %></span>
        </a>
        
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
         <ul class="dropdown-item list-unstyled">
          <li>
            <a class="removelinkfromNofications" href="/notifications">View Past Notifications</a>
          </li>
          <% notifications.forEach(function(notification) { %>                          
          <li>
            <a class="removelinkfromNofications" href="/notifications/<%= notification.id %>">
              <%= notification.username %> - Just Posted
            </a>
          </li>
          <% }); %>
        </ul>
      </div>
    </li>
    
    
    <li class="nav-item">
      <a class="nav-link" href="/logout"><i class="fas fa-sign-out-alt mr-2"></i></i>Logout</a>
    </li>
    
    <li class="nav-item">
      <a class="nav-link" href="/users/<%=currentUser.id%>"><i class="fas fa-user mr-2"></i><%=currentUser.username %></a>
    </li>
    
    <% } %>
    
    </ul
    
  </div>
  
</nav>

<!----------------------------------------------- Success / Error Section ----------------------------------------------->
<%if(error && error.length > 0){ %>
<div class = "alert alert-danger mb-0 alert-dismissible fade show" role = "alert">
  <%= error%>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<% } %>

<%if(success && success.length > 0){ %>
<div class = "alert alert-success mb-0 alert-dismissible fade show" role = "alert">
  <%= success %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<% } %>