<!--==========================================Include Header==========================================================-->
<% include ../partials/header %>

<!--==========================================Title of Notifications==================================================-->
<div class="container text-center text-white p-2 my-3">  
  <i class="fas fa-crown fa-2x mb-4 text-center"></i>
  <h3 class="text-center">Notifications</h3>
</div>

<!--==========================================Notifications===========================================================-->
<div class="container">        
    <div class="row">
    <div class="col-md-12">
        <div class="card mb-4 shadow-sm">
            <div class="card-body">
            <ul class="list-unstyled">
	            <% allNotifications.forEach(function(notification) { %>
	            <li class="mb-2"><a class="liremovenotificationLink" href="/items/<%= notification.itemId %>"><%= notification.username %> - Just Posted %> </a></li>
	            <% }); %>
            </ul>
            </div>
        </div>
        </div>
    </div>
</div>

<!--==========================================Include Footer===========================================================-->
<% include ../partials/footer %>