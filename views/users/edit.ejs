<!--==========================================Include Header==========================================================-->
<% include ../partials/header %>

<!--==========================================Title of Edit Form======================================================-->
<div class="container text-center text-white p-2 my-3">  
  <i class="fas fa-crown fa-2x mb-4 text-center"></i>
  <h3 class="text-center">Edit Profile</h3>
</div>

<!--==========================================Edit Form======================================================-->
<div class="container col-md-6 shadow-sm mt-3 mb-4 allformColor pageAnimate rounded">

<form action="/users/<%=user._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
  <div class="container text-white p-3">
  <div class="form-row">
    
  <div class="form-group col-md-6">
    <label for="inputuniversity">Unviersity</label>
    <input type="text" class="form-control" id="inputuniversity" pattern="TAMUK" title="Please Enter The Unviersity You Are From" 
    name="university" value="<%=user.university%>" list="universityName" required="required">
    <datalist id="universityName">
      <option value="TAMUK" selected>TAMUK</option>
    </datalist>
  </div>
    
  <div class="form-group col-md-6">
    <label for="inputprofession">Profession</label>
    <input type="text" class="form-control" id="inputprofession" pattern="(Student|Faculty|Former Student|Teacher)" 
    title="Please Enter Your Profession" 
    name="profession" value="<%=user.profession%>" list="professionName" required="required">
    <datalist id="professionName">
      <option value="Student" selected>Student</option>
      <option value="Faculty">Faculty</option>
      <option value="Teacher">Teacher</option>
      <option value="Former Student">Former Student</option>
    </datalist>
  </div>
    
  <div class="form-group col-md-6">
    <label for="inputyear">Year</label>
    <input type="text" class="form-control" id="inputyear" pattern="(Freshman|Sophomore|Junior|Senior|Year-Around)" 
    title="Please Enter Your Year" name="year" value="<%=user.year%>" list="yearName" required="required">
    <datalist id="yearName">
      <option value="Freshman" selected>Freshman</option>
      <option value="Sophomore">Sophomore</option>
      <option value="Junior">Junior</option>
      <option value="Senior">Senior</option>
      <option value="Year-Around">Year-Around</option>
    </datalist>
  </div>
    
  <div class="form-group col-md-6">
    <label for="inputgender">Gender</label>
    <input type="text" class="form-control" id="inputgender"  pattern="(Male|Female|Other)" 
    title="Please Enter Your Gender" name="gender" value="<%=user.gender%>" list="genderName" required="required">
    <datalist id="genderName">
      <option value="Male" selected>Male</option>
      <option value="Female">Female</option>
      <option value="Other">Other</option>
    </datalist>
  </div>
    
  <div class="form-group col-md-6">
    <label for="inputimage">Image</label>
    <input type="file" class="" id="inputimage"  name="image" accept="image/*">
  </div>
    
  </div>

  <!-- Signup Button -->
  <button type="submit" class="btn text-white removeLink"><i class="fas fa-sign-in-alt mr-2"></i>Submit</button>

  </div>
</form>
</div>

<!--==========================================Include Footer==========================================================-->
<% include ../partials/footer %>